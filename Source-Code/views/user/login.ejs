<!-- This includes the boiler pate for the views template, Also consists of navbar and footer -->
<% layout('layouts/boilerplate.ejs') %>

<div class="row">
    <h1 class="text-center">Welcome, Please Login... </h1>
    <div class="col-md-4 offset-4">
        <form class='needs-validation' action="/login" method="POST" novalidate>
            <div class="mb-3">
                <label class="form-label" for="userId">Enter the Username: </label>
                <input class="form-control" type="text" id="userId" name="username" required>
                <div class="valid-feedback">
                    looks Good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="pass">Enter Password: </label>
                <input class="form-control" type="password" id="pass" name="password" required>
                <div class="valid-feedback">
                    looks Good!
                </div>
            </div>
            <div class="text-center">
                <button class="btn btn-success">LogIn</button>
            </div>
        </form>
    </div>
</div>