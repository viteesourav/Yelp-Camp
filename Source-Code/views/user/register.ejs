<!-- This includes the boiler pate for the views template, Also consists of navbar and footer -->
<% layout('layouts/boilerplate.ejs') %>

<div class="row">
    <h1 class="text-center">Welcome to Register page !!</h1>
    <div class="col-md-4 offset-4">
        <form class='needs-validation' action="/register" method="POST" novalidate>
            <div class="mb-3">
                <label class="form-label" for="email">Enter Your EmailID: </label>
                <input class="form-control" type="email" id="email" name="user[email]" required>
                <div class="valid-feedback">
                    looks Good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="userId">Enter the Username: </label>
                <input class="form-control" type="text" id="userId" name="user[username]" required>
                <div class="valid-feedback">
                    looks Good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="pass">Enter Password: </label>
                <input class="form-control" type="password" id="pass" name="user[password]" required>
                <div class="valid-feedback">
                    looks Good!
                </div>
            </div>
            <div class="text-center">
                <button class="btn btn-success">Add</button>
            </div>
        </form>
    </div>
</div>